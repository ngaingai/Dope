{{^is "page"}}
    <div class="post-meta">
        <span class="post-meta-item post-meta-date">
            <time datetime="{{date format="YYYY-MM-DD"}}">
                {{date published_at}}
            </time>
        </span>
        <span class="post-meta-item post-meta-length">{{reading_time}}</span>
        {{#if featured}}
            <span class="post-meta-featured">
                <i class="icon icon-star"></i>
            </span>
        {{/if}}
    </div>
{{/is}}
